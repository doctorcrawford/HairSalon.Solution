@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <p>No clients have been added to your salon yet!</p>
}

<div class="list">
  <ul>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId})</li>
    }
  </ul>
</div>

<p>@Html.ActionLink("Add a new stylist", "Create")</p>
<p>@Html.ActionLink("Add a new client", "Create", "Clients")</p>
<p>@Html.ActionLink("Back to home page", "Index", "Home")</p>