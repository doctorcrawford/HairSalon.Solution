@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>
<hr />

@if (@Model.Count == 0)
{
  <p>No stylists have been found in the database.</p>
}

<div class="list">
  <ol>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"Name: {stylist.Name}", "Details", new { id = stylist.StylistId})</li>
      <ul>
        <li>@Html.ActionLink($"Specialty: {stylist.Specialty}", "Details", new { id = stylist.StylistId})</li>
      </ul>
    }
    </ul>
</div>

<div class="basic">
<p>@Html.ActionLink("Add a new stylist", "Create")</p>
<p>@Html.ActionLink("Add a new client", "Create", "Clients")</p>
<p>@Html.ActionLink("See all clients", "Index", "Clients")</p>
<p>@Html.ActionLink("Back to home page", "Index", "Home")</p>
</div>